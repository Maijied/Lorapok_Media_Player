{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.lorapok.mediaplayer",
  "asar": true,
  "compression": "normal",
  "productName": "LorapokMediaPlayer",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "mac": {
    "target": ["dmg", "zip"],
    "artifactName": "${productName}-Mac-Installer.${ext}",
    "icon": "public/icon.png"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Windows-Setup.${ext}",
    "icon": "public/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": ["AppImage", "deb", "snap"],
    "category": "AudioVideo",
    "artifactName": "${productName}-Linux.${ext}",
    "icon": "public/icon.png"
  },
  "snap": {
    "name": "lorapokmediaplayer",
    "publish": ["snap-store"],
    "confinement": "strict",
    "summary": "Biological UI Media Engine for Pro Computing.",
    "description": "Lorapok Player is a high-performance media engine with biological UI aesthetics. Engineered for ultra-low latency playback and high-fidelity sensory experiences across Windows, Mac, and Linux."
  }
}
